import javax.swing.JFrame;
import javax.swing.JLabel;

public class HelloWorld {


public static void main(String[] args) {
    {
		System.out.print("The program prints Hello, World! on the screen when it is run.");
		System.out.print("This is what a sample Hello World Program looks like");
		
		System.out.print("\n public class HelloWorldFinal { \n"+"	public static void main(String[] args) { \n"+ "	System.out.println('Hello, World!');\n"+ " 	}\n");
		    
		System.out.print(" In Java every line of code that can actually run needs to be inside a class.\n"+ "A public class must be declared inside a file with the same name.\n" +"The next line is:");

		System.out.print("Void simply means that this method doesn't return any value.\n"+ "The arguments we get inside the method form an array of strings.\n");

		System.out.print("out represents the output of your program.\n"+"println is used to print a line.\n"+"Exercise");

		System.out.print("\n Print 'Hello, World!' to your console.");

		System.out.print("\n Hello, World!");		
	}
}

private static void createAndShowGUI() {
    //Create and set up the window.
    JFrame frame = new JFrame("HelloWorldSwing");
    frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

    //Add the ubiquitous "Hello World" label.
    JLabel label = new JLabel("Hello World");
    frame.getContentPane().add(label);

    //Display the window.
    frame.pack();
    frame.setVisible(true);
}
}

